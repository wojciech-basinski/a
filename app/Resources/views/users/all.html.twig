{% extends 'base.html.twig' %}

{% block container %}

    <div class="panel panel-success">
        <div class="panel-heading">Użytkownicy</div>
        <div class="panel-body">
            <div class="container-fluid">
                {% include 'template/flashMessages.html.twig' %}
                    <div class="table-responsive">
                        <a href="{{ path('users_add') }}" class="btn btn-success">Dodaj użytkownika</a>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Nazwa</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <td>{{ user.username }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('users_edit', {'id' : user.id}) }}" class="btn btn-info" type="button">Edytuj</a>
                                        <a href="{{ path('users_delete', {'id' : user.id}) }}" class="btn btn-danger" type="button">Usuń</a>
                                    </div>
                                </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}